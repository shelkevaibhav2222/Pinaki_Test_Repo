@using EmployeeManagement.Application.DTOs
@model List<EmployeeSalaryDto>

@if (Model.Count == 0)
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> No salary records found for this year.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-hover">
            <thead class="table-success">
                <tr>
                    <th><i class="fas fa-calendar"></i> Month</th>
                    <th><i class="fas fa-dollar-sign"></i> Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var salary in Model)
                {
                    <tr>
                        <td>@salary.SalaryDate.ToString("MMMM yyyy")</td>
                        <td><strong class="text-success">@salary.Amount.ToString("C")</strong></td>
                    </tr>
                }
            </tbody>
            <tfoot class="table-light">
                <tr>
                    <th>Total</th>
                    <th><strong class="text-primary">@Model.Sum(s => s.Amount).ToString("C")</strong></th>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="mt-3">
        <a href="/Employees/AddSalary" class="btn btn-sm btn-success">
            <i class="fas fa-plus"></i> Add New Salary Record
        </a>
    </div>
}
