@page
@model IndexModel
@{
    ViewData["Title"] = "All Employees";
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(ViewData["Message"]?.ToString()))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @ViewData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="fas fa-users"></i> Employee Directory</h3>
        <a href="/Employees/Create" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New Employee
        </a>
    </div>

    @if (Model.Employees.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No employees found. <a href="/Employees/Create">Add one now</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-id-badge"></i> ID</th>
                        <th><i class="fas fa-user"></i> First Name</th>
                        <th><i class="fas fa-user"></i> Last Name</th>
                        <th><i class="fas fa-city"></i> City</th>
                        <th><i class="fas fa-mailbox"></i> Zip</th>
                        <th><i class="fas fa-calendar"></i> Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model.Employees)
                    {
                        <tr>
                            <td>
                                <button type="button" class="btn btn-link p-0 text-decoration-none" 
                                    data-bs-toggle="modal" data-bs-target="#editModal" 
                                    onclick="loadEmployeeEdit(@emp.Id)">
                                    <strong>@emp.Id</strong>
                                </button>
                            </td>
                            <td>@emp.FirstName</td>
                            <td>@emp.LastName</td>
                            <td>@emp.City</td>
                            <td>@emp.Zip</td>
                            <td>@emp.CreatedDate.ToString("dd MMM yyyy")</td>
                            <td>
                                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#editModal" onclick="loadEmployeeEdit(@emp.Id)">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#salaryModal" onclick="loadSalaryRecords(@emp.Id)">
                                    <i class="fas fa-money-bill"></i> Salary
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Edit Employee Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Employee</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editContent">
                <div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div>
            </div>
        </div>
    </div>
</div>

<!-- Salary Records Modal -->
<div class="modal fade" id="salaryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-money-bill"></i> Salary Records</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="salaryContent">
                <div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEmployeeEdit(id) {
            document.getElementById('editContent').innerHTML = '<div class="spinner-border"><span class="visually-hidden">Loading...</span></div>';
            fetch(`/Employees/GetEmployeePartial?id=${id}`)
                .then(r => r.text())
                .then(html => document.getElementById('editContent').innerHTML = html)
                .catch(e => document.getElementById('editContent').innerHTML = '<div class="alert alert-danger">Error loading data</div>');
        }

        function loadSalaryRecords(id) {
            document.getElementById('salaryContent').innerHTML = '<div class="spinner-border"><span class="visually-hidden">Loading...</span></div>';
            fetch(`/Employees/GetSalaryPartial?id=${id}`)
                .then(r => r.text())
                .then(html => document.getElementById('salaryContent').innerHTML = html)
                .catch(e => document.getElementById('salaryContent').innerHTML = '<div class="alert alert-danger">Error loading salary data</div>');
        }
    </script>
}
